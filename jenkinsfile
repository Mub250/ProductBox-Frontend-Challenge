pipeline {
    agent any
    stages {
        stage('git repo & clean') {
            steps {
              // bat "rmdir  /s /q ProductBox-Frontend-Challenge"
                bat "git clone https://github.com/haiderali9/ProductBox-Frontend-Challenge.git"
                bat "mvn clean -f ProductBox-Frontend-Challenge"
            }
        }
        stage('install') {
            steps {
                bat "mvn install -f ProductBox-Frontend-Challenge"
            }
        }
        stage('test') {
            steps {
                bat "mvn test -f ProductBox-Frontend-Challenge"
            }
        }
        stage('package') {
            steps {
                bat "mvn package -f ProductBox-Frontend-Challenge"
            }
        }
    }
}
